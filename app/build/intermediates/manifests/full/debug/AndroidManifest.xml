<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.catwoman.lifetodo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <application
        android:name="com.catwoman.lifetodo.applications.LifeTodoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.catwoman.lifetodo.activities.LoginActivity" />
        <activity
            android:name="com.catwoman.lifetodo.activities.HomeActivity"
            android:label="@string/title_activity_home"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.catwoman.lifetodo.activities.TodoItemsActivity"
            android:label="@string/title_activity_todo_items"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.catwoman.lifetodo.activities.AddPlanActivity"
            android:label="@string/add_plan"
            android:parentActivityName="com.catwoman.lifetodo.activities.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeActivity" />
        </activity>
        <activity
            android:name="com.catwoman.lifetodo.activities.PlanActivity"
            android:parentActivityName="com.catwoman.lifetodo.activities.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>